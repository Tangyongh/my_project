<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar" />

    <androidx.core.widget.NestedScrollView
        style="@style/matchStyle"
        android:background="@color/colo_F5F5F5"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/text_color_white"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60"
                    android:background="@color/text_color_white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp15"
                        android:text="头像"
                        android:textColor="@color/text_color_dark"
                        android:textSize="16sp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/user_icon"
                        android:layout_width="@dimen/dp45"
                        android:layout_height="@dimen/dp45"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_toStartOf="@id/iv"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/circleStyle" />

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp15"
                    android:background="@color/bg_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/text_color_white">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp15"
                        android:text="所在地区"
                        android:textColor="@color/text_color_dark"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_user_loc_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_toStartOf="@id/iv2"
                        android:textColor="@color/text_color_hint"
                        android:textSize="@dimen/text_size_14" />


                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp15"
                        android:src="@mipmap/arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp15"
                    android:background="@color/bg_line" />

                <RelativeLayout
                    android:id="@+id/content_idcardVerify"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/text_color_white">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp15">

                        <TextView
                            android:id="@+id/hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="*"
                            android:textColor="#F06600"
                            android:textSize="@dimen/text_size_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp2"
                            android:layout_toRightOf="@id/hint"
                            android:text="实名认证"
                            android:textColor="@color/text_color_dark"
                            android:textSize="@dimen/text_size_16" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_user_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_toStartOf="@id/iv3"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_14" />


                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp15"
                        android:src="@mipmap/arrow" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/text_color_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/content_work"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"

                    android:background="@color/text_color_white">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp15">

                        <TextView
                            android:id="@+id/hint2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="*"
                            android:textColor="#F06600"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp2"
                            android:layout_toRightOf="@id/hint2"
                            android:text="会干的活"
                            android:textColor="@color/text_color_dark"
                            android:textSize="16sp" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="130dp"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_toStartOf="@id/iv4"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/text_color_hint"
                        android:textSize="@dimen/text_size_14" />


                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp15"
                        android:src="@mipmap/arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp15"
                    android:background="@color/bg_line" />


                <RelativeLayout
                    android:id="@+id/content_good_work"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/text_color_white">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp15">

                        <TextView
                            android:id="@+id/hint3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="*"
                            android:textColor="#F06600"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp2"
                            android:layout_toRightOf="@id/hint3"
                            android:text="擅长的活"
                            android:textColor="@color/text_color_dark"
                            android:textSize="16sp" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_work_good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_toStartOf="@id/iv5"
                        android:textColor="@color/text_color_hint"
                        android:textSize="@dimen/text_size_14" />


                    <ImageView
                        android:id="@+id/iv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp15"
                        android:src="@mipmap/arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp15"
                    android:background="@color/bg_line" />


                <RelativeLayout
                    android:id="@+id/content_committed"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/text_color_white">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp15">

                        <TextView
                            android:id="@+id/hint5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="*"
                            android:textColor="#F06600"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp2"
                            android:layout_toRightOf="@id/hint5"
                            android:text="接单承诺"
                            android:textColor="@color/text_color_dark"
                            android:textSize="16sp" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_work_committed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_toStartOf="@id/iv6"
                        android:text="请选择"
                        android:textColor="@color/text_color_hint"
                        android:textSize="@dimen/text_size_14" />


                    <ImageView
                        android:id="@+id/iv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp15"
                        android:src="@mipmap/arrow" />
                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/text_color_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp15"
                    android:text="自我描述"
                    android:textColor="@color/text_color_dark"
                    android:textSize="16sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp15"
                    android:background="@color/bg_line" />


                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_color_white"
                    android:gravity="top"
                    android:hint="可填写自己的工作经历或者介绍等 例如：本人从事建筑行业16年，专业泥瓦匠，做事认真，为人诚信 "
                    android:maxLength="200"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/text_color_dark"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginBottom="@dimen/dp10"
                    android:textColor="@color/text_color_hint"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/content_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:background="@color/text_color_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp15"
                    android:text="账号和绑定设置"
                    android:textColor="@color/text_color_dark"
                    android:textSize="16sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp15"
                    android:src="@mipmap/arrow" />
            </RelativeLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp20"
                android:backgroundTint="#FFD240"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="保存"
                android:textColor="@color/text_color_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:theme="@style/Theme.MaterialComponents.NoActionBar"
                app:cornerRadius="8dp" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>